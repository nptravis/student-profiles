<h1>All Suggestions</h1>
<button class="new-suggestion grey"><%=link_to "+ New Suggestion", new_suggestion_path %></button>
<ol>
	<%@suggestions.each do |suggestion|%>
		<li><% if current_user.id == suggestion.user_id %>
				<%= link_to "<i class=\"fas fa-trash-alt\"></i>".html_safe, user_suggestion_path(current_user, suggestion), :method => "delete", :class => "destroy" %>
				<%= link_to "<i class=\"fas fa-pencil-alt\"></i>".html_safe, user_suggestion_path(current_user, suggestion) %>
			<% end %>

			<%= suggestion.content%> - <small><b><%= suggestion.user.username%></b></small>
		</li>
	<% end %>

</ol>
