
<div class="main-container container">
	<h1><%= @student.lastfirst %> - <%= @student.student_number %> - Grade <%= @student.gradelevel %> </h1>

<div class="flex-container">

		<!-- data visualizations -->
		<div class="graphs-container clearfix">
			<%= link_to "Enter Grades", new_student_grade_path(@student) %>
			<div class="graph-grid row">
				<% @data_hash.each.with_index(1) do |course, i| %>
					<% if course.present? %>
						<div class="class-graph col">
							<div class=""><canvas id="barChart<%= i %>"></canvas></div>
							<div class=""><canvas id="radarChart<%= i %>"></canvas></div>
						</div>
					<% end %>
				<% end %>
			</div>
		</div>

		<!-- <canvas id="map-chart"></canvas> -->
		

		<!-- Comments form and comment stream -->
		<div class="comments col clearfix" id="comments">
			<%= form_tag student_comments_path(@student) do %>

				<%= label_tag "Post a comment" %> <br>
			  <%= text_area_tag 'comment[content]' %> <br>

			  <%= submit_tag "Post" %>
			<% end %>


			<% if @student.comments.any? %>
				<% @student.comments.reverse.each do |comment| %>
				<div class="comment-content row clearfix">
					
					<% if current_user.id == comment.user_id %>
					<%= link_to "<i class=\"fas fa-trash-alt\"></i>".html_safe, student_comment_path(@student, comment), :method => "delete", :class => "destroy" %>
					<%= link_to "<i class=\"fas fa-pencil-alt\"></i>".html_safe, student_comment_path(@student,comment, :class =>"") %>
					<% end %>
					<p class="commentContent"><%= comment.content %> - <small class="commentUsername"><strong><%= comment.user.username %></strong></small></p>
				</div>
				<% end %>
			<% end %>
		</div>

	</div>
</div>
<%= content_tag :div, class: "student_list", id: "studentshow", data: {student: @data_hash} do %>
<%end%>

