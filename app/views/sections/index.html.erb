<div class="student-nav-container">
	<%= form_tag sections_path do %>
	<span>Sort by Class</span>
		<%= select_tag 'courses', options_from_collection_for_select(@courses, 'id', 'course_name', :include_blank => true) %>
		
		<%= submit_tag "Search" %>
	<% end %>
	<%= form_tag sections_path do %>
		<span>Sort by Department/Grade</span>
		<%= select_tag 'department', content_tag(:option,'All Departments',:value=>"")+options_from_collection_for_select(@departments, 'id', 'name') %>
		<%= select_tag 'grade_level', options_for_select([["All Grades", nil],["6th Grade", "6"],["7th Grade", "7"],["8th Grade", "8"] ]) %>
		
		<%= submit_tag "Search" %>
	<% end %>
</div>

<div class="sections-content-container">
	<%= render 'sections/master_schedule' %>
</div>