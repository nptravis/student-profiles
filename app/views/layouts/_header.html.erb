<header>
  <div class="header-container">

    <div class="logo">
      <a href="/"><h2>Profiles</h2></a>
    </div>
    
    <div class="session-links">
      <ul>

      <% if current_user.present? %>
      <li><button class="hide-sidebar">Toggle Sidebar</button></li>
        <li><p class="welcome-text-header">Welcome <%= current_user.username %></p> 
          <% if current_user.username == "demouser" %>
            <%= image_tag 'demouser.jpg', height: "32", width: "32", :style => "border-radius: 75%", alt: "User Profile Image" %>
          <% else %>
            <img src=<%= current_user.image_url %> height="32" width="32" class="profile-image">
          <% end %>
        </li>         
        <li><%= link_to "Logout", logout_path %></li>
      <% else %>          
        <li><%= link_to "Login", login_path %></li>
        <li><%= link_to "Log via Google", "/auth/google_oauth2" %></li>
        <!-- <li><%#= link_to "Sign Up", signup_path %></li> -->
      <% end %>

      </ul>
    </div>
  </div>
</header>
