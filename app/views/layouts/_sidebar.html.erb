<div class="sidebar container">
	<% if current_user.present? %>
		<% if current_user.admin %>
			<div class="sidebarNav">
				<button><a href="/students">Index</a></button>
				<button><a href="#">Profile</a></button>
				<button><a href="#">Schedule</a></button>
				<button><a href="#">Comments</a></button>
			</div>
		<% else %>
			<div class="sidebarNav">
				<button><a href="/students">Your Student Index</a></button>
				<button id="sidebar-profile"><%= link_to "Profile", user_path(current_user) %></button>
				<button id="sidebar-courses" data-userid=<%= current_user.id%>>Your Courses</button>
				<button><a href="#">Your Schedule</a></button>
			</div>

		<% end %>
	<% end %>
	

</div>